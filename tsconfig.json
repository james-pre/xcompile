{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"outDir": "dist",
		"lib": ["ESNext", "ESNext.Disposable", "Decorators"],
		"moduleResolution": "NodeNext",
		"declaration": true,
		"strict": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"out": "docs",
		"name": "XCompile"
	}
}
